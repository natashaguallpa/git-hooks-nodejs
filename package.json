{
  "name": "git-hooks-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**",
    "lint-fix": "eslint . --fix",
    "success-message": "echo Thanks for committing $GIT_AUTHOR_NAME"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "husky": "^4.3.8",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm run success-message"
    }
  },

  "lint-staged":{
    "*.js": [
      "eslint",
      "jest --findRelatedTests"
    ]
  }
}
